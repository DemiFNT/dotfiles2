conky.config = {
own_window = true,
own_window_type = 'override',
own_window_transparent = true,
own_window_hints = 'undecorated,below,skip_taskbar,skip_pager',
own_window_colour = '#000000',
own_window_class = 'Conky',
own_window_title = 'sidebar Conky',

minimum_width = 400, 
minimum_height = 1100,
maximum_width = 600,

gap_x = 0,--## left | right
gap_y = 0,--## up | down


use_xft = true,
font = 'iosevka:size=10',

override_utf8_locale = true,

uppercase = false,
draw_shades = false,--yes
default_shade_color = 'black',

draw_outline = false,-- amplifies text if yes
default_outline_color = 'black',

color0 = '#F7F7F1',-- light
color1 = '#2f343f',-- dark
color2 = '#bf616a',-- Red
color3 = '#a3be8c',-- Green
color4 = '#ebcb8b',-- Yellow
color5 = '#81a1c1',-- Blue
default_color = '#F7F7F1',

draw_borders = false,
stippled_borders = 0,
border_inner_margin = 0,
border_outer_margin = 0,
border_width = 0,
draw_graph_borders = true,--no
background = true,
use_spacer = 'none',
no_buffers = true,
short_units = true,
pad_percents = 2,
imlib_cache_size = 0,
double_buffer = true,
update_interval = 2,

};

conky.text = [[

#${image ~/.config/custom/drops/bg-light.png -p 0,0}
#${voffset 0}

${voffset 30}${offset 85}${font iosevka:size=56}${time %H:%M}

${voffset -150}${offset 132}${font iosevka:size=11}${time %a %-d %B}

${image ~/.config/custom/drops/ram.png -p 80,237 -s 50x50}
${voffset 20}${offset 155}${font iosevka:Bold:size=12}RAM
${voffset 0}${offset 155}${font iosevka:size=11}$mem / $memmax

${image ~/.config/custom/drops/cpu.png -p 80, 315 -s 50x50}
${voffset -3}${offset 155}${font iosevka:Bold:size=12}CPU
${voffset 0}${offset 155}${font iosevka:size=11}${cpu cpu0}%

${image ~/.config/custom/drops/temperature.png -p 80,391 -s 50x50}
${voffset -3}${offset 155}${font iosevka:Bold:size=12}Temperature
${voffset 0}${offset 155}${font iosevka:size=11}${hwmon temp 1}Â°C

${image ~/.config/custom/drops/battery.png -p 79,460 -s 50x50}
${voffset -8}${offset 155}${font iosevka:Bold:size=12}Battery
${voffset 0}${offset 155}${font iosevka:size=11}${battery_percent}%

${image ~/.config/custom/drops/wifi.png -p 87,543 -s 38x40}
${voffset -3}${offset 155}${font iosevka:Bold:size=12}Wifi
${voffset 0}${offset 155}${font iosevka:size=11}${wireless_essid wlp3s0}

#${image ~/.config/custom/drops/cloud.png -p 1614,631 -s 50x50}
#${voffset -3}${offset 1720}${font iosevka:Bold:size=12}Up / Down
#${voffset 0}${offset 1720}${font iosevka:size=11}$downspeed / $upspeed
${image ~/.config/custom/drops/appearance.png -p 80,614 -s 50x50}
${voffset -3}${offset 155}${font iosevka:Bold:size=12}Updates
${voffset 0}${offset 155}${font iosevka:size=11}${execi 60 ~/.config/polybar/scripts/check-all-updates.sh}

#${image ~/.config/custom/drops/volume.png -p 1660,681 -s 38x40}
