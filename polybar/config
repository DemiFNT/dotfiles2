border-right-size = 0
border-top-size = 0
border-bottom-size = 2
border-color = #99000000

padding-left = 1
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = Iosevka Nerd Font:size=10;3
font-1 = Iosevka Nerd Font:style=Medium:size=11;3
font-2 = Iosevka Nerd Font:style=Medium:size=14;3
font-3 = Font Awesome 5 Free Solid:size=10;3
font-4 = Font Awesome 5 Free Solid:size=11;3
font-6 = Font Awesome 5 Free Solid:size=8;3

modules-left = bspwm 
modules-center = 
modules-right = arrow1 wlan2 arrow2 battery2 arrow3 volume2 arrow4 arch-aur-updates time

