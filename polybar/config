[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;
ws-icon-3 = IV;

format = <label-state>
label-active = 
label-occupied = %icon%
label-urgent = %icon%
label-empty = %icon%

label-occupied-padding = 2
label-empty-padding = 2
label-urgent-padding = 2
label-active-padding = 2

label-active-foreground = ${colors.indicator}
label-urgent-foreground = ${colors.foreground}
label-empty-foreground = ${colors.foreground}
label-occupied-foreground = ${colors.foreground}

label-active-background = ${colors.background-panel}
label-urgent-background = ${colors.background-panel}
label-empty-background = ${colors.background-panel}
label-occupied-background = ${colors.background-panel}


